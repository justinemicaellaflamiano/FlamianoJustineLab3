<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="495dp"
        android:layout_height="48dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Constraint Layout"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="-9dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="263dp"
        app:srcCompat="@drawable/aa"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="48dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erlin's Tapsilog"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="326dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:text="Location: Maceda, Sampaloc, Luzon 1008, Philippines"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="363dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance from UST: 0.2km"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="419dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@android:string/cancel"
        android:text="Back"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="478dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@android:string/VideoView_error_button"
        android:text="Next"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="478dp" />
</android.support.constraint.ConstraintLayout>